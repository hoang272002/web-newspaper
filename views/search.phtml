<script>
        const authors = [
            <?php 
                if($listAuthor){
                    foreach ($listAuthor as $item){
                        echo "{ id: \"$item->user_id\", name: \"$item->full_name\" },";
                    }
                }
            ?>
        ];
        const itemsPerPage = 5;
        let currentPage = 1;

        function displayAuthors() {
            const authorList = document.getElementById('author-list');
            authorList.innerHTML = `
                <div class="option">
                    <input type="radio" id="all" name="author" value="do">
                    <label for="author">All</label>
                </div>
            `;
            const start = (currentPage - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            const paginatedAuthors = authors.slice(start, end);

            paginatedAuthors.forEach(author => {
                authorList.innerHTML += `
                    <div class="option">
                        <input type="radio" id="${author.id}" name="author" value="${author.name}">
                        <label for="author">${author.name}</label>
                    </div>
                `;
            });

            document.getElementById('author-prev').disabled = currentPage === 1;
            document.getElementById('author-next').disabled = end >= authors.length;
        }

        function nextPage(section) {
            currentPage++;
            displayAuthors();
        }

        function prevPage(section) {
            currentPage--;
            displayAuthors();
        }

        displayAuthors();
    </script>